alphabet = "abcdefghijklmnopqrstuvwxyz"
plaintext = "hello"

def encrypt(x, a, c):
    return (a*x + c) % (len(alphabet))

def encrypt_text(text):
    array = []
    for chr in text:
        index = encrypt(alphabet.index(chr), 5, 2)
        newchar = alphabet[index]
        array.append(newchar)

    return "".join(array)

print(encrypt_text(plaintext))
